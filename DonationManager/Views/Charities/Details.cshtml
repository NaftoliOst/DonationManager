@model DonationManager.Models.Charity

@{
    ViewBag.Title = "Details";
}
<br />
<div class="card">
    <div class="card-header">
        <h1 class="card-title">@Model.Name</h1>
        @{
            if (Model.Name != Model.OfficialName)
            {
                <h4 class="card-subtitle">@Model.OfficialName</h4>
            }
        }
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <dl class="dl-horizontal">
                    <dt>
                        Category:
                    </dt>
                    <dd>
                        @Model.Type
                    </dd>
                </dl>
            </div>

            @{
                if (Model.Details != null)
                {
                    <div class="col-md-8">
                        <dl class="dl-horizontal">
                            <dt>
                                Details:
                            </dt>
                            <dd>
                                @Model.Details
                            </dd>
                        </dl>
                    </div>
                }
            }

        </div>
        <dl class="dl-horizontal">
            @{
                if (Model.PreferredMethod != null)
                {
                    <dt>
                        Preferred Payment Method:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.PreferredMethod)
                    </dd>
                }
                if (Model.Notes != null)
                {
                    <dt>
                        Notes:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Notes)
                    </dd>
                }
            }
        </dl>
        <div class="text-right">  @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-outline-warning" })</div>
    </div>
    <div class="card-footer">
        @Html.ActionLink("All Charities", "index", new { }, new { @class="btn btn-outline-secondary"})
    </div>
</div>
<br />
@Html.ActionLink("New Donation", "create", "donations", new { }, new { @class="btn btn-primary btn-lg btn-block"})
<br />