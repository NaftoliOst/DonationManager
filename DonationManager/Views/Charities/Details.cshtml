@model DonationManager.Models.Charity

@{
    ViewBag.Title = "Details";
}
<div class="card shadow">
    <div class="card-header">
        <div class="btn-toolbar justify-content-between">
            <div>
                <h1 class="card-title">@Model.Name</h1>
                @{
                    if (Model.Name != Model.OfficialName)
                    {
                        <h4 class="card-subtitle">@Model.OfficialName</h4>
                    }
                }
            </div>
            <div>  @Html.ActionLink("New Donation", "create", "donations", new { }, new { @class = "btn btn-primary btn-lg btn-block" })</div>
        </div>



    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <dl class="dl-horizontal">
                    <dt>
                        Category:
                    </dt>
                    <dd>
                        @Model.Type
                    </dd>
                </dl>
            </div>

            @{
                if (Model.Details != null)
                {
                    <div class="col-md-8">
                        <dl class="dl-horizontal">
                            <dt>
                                Details:
                            </dt>
                            <dd>
                                @Model.Details
                            </dd>
                        </dl>
                    </div>
                }
            }

        </div>
        <dl class="dl-horizontal">
            @{
                if (Model.PreferredMethod != null)
                {
                    <dt>
                        Preferred Payment Method:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.PreferredMethod)
                    </dd>
                }
                if (Model.Notes != null)
                {
                    <dt>
                        Notes:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Notes)
                    </dd>
                }
            }
        </dl>
    </div>
    <div class="card-footer">
        <div class="btn-toolbar justify-content-between">
            <a class="btn btn-outline-secondary" href="~/Charities/index"><i class="fas fa-angle-double-left"></i> All Charities</a>
            <a class="btn btn-outline-warning" href="@Url.Action("Edit","Charities",new { id = Model.ID })"><i class="fas fa-pencil-alt"></i> Edit</a>
        </div>
    </div>
</div>
<br />
@{ 
    {
        <div class="row">
            <!--Last Donation Date-->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Last Donated
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    9 months ago
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-2x text-gray-300 fa-calendar-alt"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--Last Donation Amount-->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                    Last Donation
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    £100
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-2x text-gray-300 fa-history"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--Average Donation Amount-->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Average Donation
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    £150
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-2x text-gray-300 fa-chart-line"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--Supporting Since -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-secondary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">
                                    Supporting Since
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    2018
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-2x text-gray-300 fa-hand-holding-usd"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <br />
        <div>
            @{
                Html.RenderAction("PartialIndex", "Donations", new { id = Model.ID });

            }
        </div>
    }
}
